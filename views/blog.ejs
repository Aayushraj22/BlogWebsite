<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container my-3 flex-wrap flex flex-col">
        <h2><%= blog.title %></h2>
        <div class="container flex py-3">
            <img src="<%= blog.createdBy?.profileImgURL%>" alt="bloggerImage" width="40px">
            <span class="mx-3"><%= blog.createdBy?.fullname %></span>
            <p><%= blog.createdBy?.email %></p>
        </div>
        <img src="<%= blog?.coverImageURL %>" alt="img" width="500px">
        <p class="mt-3 "><%= blog.body %> </p>
    </div>

    <div class="container my-3">
        <h3>Comments</h3>
        <% if (user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                    <input
                        type="text"
                        class="form-control"
                        name="content"
                        placeholder="comment here..."
                        />
                </div>
                <div class="my-3">
                    <button class="btn btn-outline-primary">Add</button>
                </div>
            </form>
        <% } %>

        <% comments.forEach(comment => { %>
         <div class="container">
            <img src="<%= comment.createdBy.profileImgURL %>" alt="userImg" width="30px">
            <span><b><%= comment.createdBy.fullname %></b></span>
            <p><%= comment.content %></p>
         </div>
        <% }) %>
    </div>



    <%- include('./partials/scripts') %>

</body>
</html>